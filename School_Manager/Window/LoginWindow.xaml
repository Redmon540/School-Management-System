<Window
    x:Class="School_Manager.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:School_Manager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="400"
    MinHeight="600"
    SizeToContent="Height"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    Style="{StaticResource LoginWindowStyle}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d" local:CenterOnSizeChangeBehaviour.CenterOnSizeChange="True">

    <local:PageHost CurrentPage="{Binding CurrentPage, 
        Converter={local:ApplicationPageValueConverter}}" 
                    ClipToBounds="True"/>

</Window>
